{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PromptDSL",
  "scopeName": "source.promptdsl",
   "patterns": [
    {
      "name": "entity.name.type",
      "match": "-[^\\r\\n]+"
    },
    {
  "name": "constant.numeric.decimal.go",
  "match": "-?\\b\\d+(\\.\\d+)?\\b"
},

    {
      "name": "keyword.other.module.promptdsl",
      "match": "\\b(prompt|in|output|sys|user|fix|after|goimport|before|schema|parse|jsonfix|markdown)\\b"
    },
    {
      "name": "keyword.control.promptdsl",
      "match": "\\b(if|else|for|switch|case|default|break|continue|return)\\b"
    },
    {
      "name": "entity.name.function",
      "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
    },

    {
      "name": "string.quoted.double.promptdsl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.promptdsl",
          "match": "\\\\."
        }
      ]
    },

    {
      "name": "constant.language.boolean.promptdsl",
      "match": "\\b(true|false)\\b"
    },
    {
      "name": "comment.line.double-slash.promptdsl",
      "match": "//.*$"
    },
    {
      "name": "comment.block.promptdsl",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "punctuation.bracket.promptdsl",
      "match": "[\\{\\}\\(\\)\\[\\]]"
    },
    {
      "name": "keyword.operator.promptdsl",
      "match": "\\+\\+|--|\\+=|-=|\\*=|/=|%=|==|!=|<=|>=|<|>|=|\\-|\\+|\\*|\\/|%"
    },
    {
      "name": "variable.other.promptdsl",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  ],
  "repository": {},
  "scopeName": "source.promptdsl"
}
